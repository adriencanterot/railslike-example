#embed("embeds/header.leaf")

<form class="submit-form" action="/users/update/#(user.id)" method="post">
  <input type="text" id="username-input" name="username" value="#(user.name)"><br/> <!-- TODO: Localize -->

  <button type="submit">Update</button> <!-- TODO: Localize -->
</form>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  #loop(user.posts, "post") {
    <tr>
      <td>#(post.title)</td>
      <td>#(post.content)</td>
    </tr>

  }
</table>
